{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "playwright/test"],
    "baseUrl": ".",
    "paths": {
      "@moneymood-monorepo/shared/*": ["../shared/src/*"],
      "@moneymood-monorepo/backend/*": ["../backend/*"],
      "@moneymood-monorepo/frontend/*": ["../frontend/src/*"]
    }
  },
  "include": ["**/*.ts", "global-setup.ts", "global-teardown.ts"],
  "exclude": ["node_modules"]
}
